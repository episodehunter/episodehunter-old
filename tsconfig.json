{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "compileOnSave": false,
    "exclude": [
        ".idea",
        "dist",
        "log",
        "node_modules",
        "vagrant"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
