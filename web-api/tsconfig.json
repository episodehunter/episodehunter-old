{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "compileOnSave": false,
    "exclude": [
        ".idea",
        "dist",
        "log",
        "node_modules",
        "typings/browser.d.ts",
        "typings/browser",
        "src/specs"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
